{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public/dashboard/dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/public/dashboard/dist/assets/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/public/dashboard/dist/index.html"
        }
    ]
}